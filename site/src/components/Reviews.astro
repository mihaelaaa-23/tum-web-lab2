const reviews = [
  { img: "client-5.png", name: "Moldpack", role: "Producător de ambalaje", quote: "Colaborarea cu Irina a fost impecabilă. Strategia a fost clară, iar rezultatele s-au văzut rapid." },
  { img: "client-6.png", name: "GarduriMD", role: "Companie de construcții", quote: "Vizibilitate crescută și cereri constante. Ne-a plăcut atenția la detalii și ritmul de lucru." },
  { img: "client-7.png", name: "Proimobil", role: "Imobiliare", quote: "Soluții complete și atenție la detalii. Proiectul a fost livrat la timp și peste așteptări." },
  { img: "client-2.png", name: "XTD.md", role: "Tehnologie și software", quote: "Comunicare foarte bună și livrare constantă. Am văzut creștere reală la engagement și reach." },
  { img: "client-8.png", name: "russrent", role: "Servicii de închirieri auto", quote: "Am primit un plan clar și rezultate măsurabile. Colaborarea a fost eficientă și bine organizată." },
