---
import servicesData from '../../content/services/index.json';

const { headline, subtext, packages } = servicesData;
---

<section id="services" class="bg-white py-8 md:py-10 scroll-mt-20 scroll-animate">
  <div class="container max-w-[1100px] mx-auto px-4">
    <h2 class="font-accent text-primary italic text-3xl md:text-5xl text-center mb-4 font-medium">
      {headline}
    </h2>
    <p class="text-center text-gray-600 mb-6 md:mb-8 max-w-[600px] mx-auto">
      {subtext}
    </p>
    <div class="flex justify-center items-center gap-6 flex-wrap mt-6 md:mt-8">
      {packages.map((pkg) => (
        <div class="pkg-card stagger-item">
          <div class="pkg-content">
            <div class="pkg-back">
              <div class="pkg-blobs">
                <div class="pkg-blob"></div>
                <div class="pkg-blob b2"></div>
                <div class="pkg-blob b3"></div>
              </div>
              <div class="pkg-back-content">
                <span class="pkg-name">{pkg.name}</span>
                <span class="pkg-tagline">{pkg.tagline}</span>
              </div>
            </div>
            <div class="pkg-front">
              <div class="pkg-blobs">
                <div class="pkg-blob"></div>
                <div class="pkg-blob b2"></div>
                <div class="pkg-blob b3"></div>
              </div>
              <div class="pkg-front-content">
                <div class="pkg-front-top">
                  <small class="pkg-badge">{pkg.badge}</small>
                  <span class="pkg-front-title">{pkg.name}</span>
                  <div class="pkg-divider"></div>
                </div>
                <div class="pkg-bottom">
                  {pkg.features && pkg.features.length > 0 ? (
                    <ul class="pkg-features">
                      {pkg.features.map((feature) => (
                        <li>{feature}</li>
                      ))}
                    </ul>
                  ) : (
                    <p class="pkg-features-text">{pkg.featuresText}</p>
                  )}
                  <a href="#contact" class="pkg-cta">{pkg.ctaLabel}</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>